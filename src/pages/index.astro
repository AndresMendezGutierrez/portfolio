---
import { useTranslations } from "../assets/i18n/utils";
import PortfolioContent from "../components/PortfolioContent.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const lang = Astro.currentLocale || "en";

const translate = useTranslations(lang as "es" | "en" | "de");
---

<Layout currentLang={lang} translate={translate}>
  <PortfolioContent translate={translate} />
</Layout>
