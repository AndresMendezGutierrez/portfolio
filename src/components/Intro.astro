---
import Badge from "./Badge.astro";
import NavSection from "./NavSection.astro";

const { translate, id, class: className } = Astro.props;
---

<article
  id={id}
  class="min-h-screen flex flex-col justify-center items-center relative"
>
  <section class="flex flex-col gap-4 justify-center items-center">
    <h1 class="text-6xl font-bold z-10">{translate("intro_title")}</h1>
    <h2 class="text-2xl font-bold">{translate("intro_subtitle")}</h2>
    <Badge>{translate("intro_status")}</Badge>
  </section>

  <NavSection translate={translate} class="absolute bottom-0" />
</article>
