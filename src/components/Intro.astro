---
import Badge from "./Badge.astro";
import NavSection from "./NavSection.astro";

const { translate, id, class: className } = Astro.props;
---

<article
  id={id}
  class="min-h-screen flex flex-col justify-center items-center relative"
>
  <section
    class="flex flex-col gap-4 justify-center items-center sm:gap-8 lg:gap-10"
  >
    <h1
      class="w-3/5 text-center text-5xl font-[workbench] sm:text-6xl lg:text-8xl"
    >
      {translate("intro_title")}
    </h1>
    <h2
      class="text-lg sm:text-2xl lg:text-[28px]/[100%] font-semibold lg:mt-2 lg:mb-1"
    >
      {translate("intro_subtitle")}
    </h2>
    <Badge>{translate("intro_status")}</Badge>
  </section>

  <NavSection translate={translate} class="absolute bottom-0" />
</article>
