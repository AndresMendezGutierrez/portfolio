---
import "../styles/global.css";
import BackgroundPrimary from "../components/BackgroundPrimary.astro";
import Footer from "../components/Footer.astro";

const { currentLang, translate } = Astro.props;
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={translate("head_description")} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{translate("head_title")}</title>
  </head>
  <body class="px-8">
    <main>
      <slot />
    </main>
    <Footer translate={translate} />
    <BackgroundPrimary />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    background-color: #0f182e;
    justify-content: center;
    align-items: center;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
