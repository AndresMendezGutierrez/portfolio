---
import type { useTranslations } from "../assets/i18n/utils";
import Footer from "../components/Footer.astro";
import GridBackground from "../components/GridBackground.astro";
import Header from "../components/Header.astro";

interface Props {
  currentLang: "en" | "es" | "de";
  translate: ReturnType<typeof useTranslations>;
}

const { currentLang, translate } = Astro.props;
---

<!doctype html>
<html lang={currentLang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={translate("head_description")} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{translate("head_title")}</title>
  </head>
  <body class="bg-white dark:bg-black dark:text-white px-4.5 md:px-8 lg:px-16">
    <Header
      class="px-4.5 md:px-8 lg:px-16 pt-6 md:pt-8 lg:pt-12 max-w-352 mx-auto"
      currentLang={currentLang}
      translate={translate}
    />
    <main class="max-w-7xl mx-auto">
      <slot />
    </main>
    <Footer translate={translate} />
    <GridBackground />
  </body>
</html>
