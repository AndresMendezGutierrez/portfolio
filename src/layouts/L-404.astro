---
import GridBackground from "../components/GridBackground.astro";
import Header from "../components/Header.astro";

const { currentLang, translate } = Astro.props;
---

<!doctype html>
<html lang={currentLang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={translate("head_description")} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
    <meta name="generator" content={Astro.generator} />
    <title>{translate("head_title")}</title>
  </head>
  <body class="bg-white dark:bg-black dark:text-white px-4.5 md:px-8 lg:px-16 min-h-screen">
    <Header
      class="px-4.5 md:px-8 lg:px-16 pt-6 md:pt-8 lg:pt-12 max-w-352 mx-auto"
      currentLang={currentLang}
      translate={translate}
    />
    <main class="max-w-7xl mx-auto flex flex-col items-center justify-center min-h-screen">
      <slot />
    </main>
    <GridBackground />
  </body>
</html>
